if contains "${EXTS[@]}" "phalcon"; then
  echo "  - phalcon"
  cd "${PREFIX}/src/phpvm/php-${target}/ext/phalcon/build/php${major}/safe"
  printf "\n" | phpize
  printf "\n" | ./configure -C --enable-phalcon
  make $MAKEOPTS
  sudo make install

  echo "extension=phalcon.so" | sudo tee -a "${PREFIX}/lib/php.ini"
fi
